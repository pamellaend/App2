<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="#F3C5FF">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista de Presentes"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textColor="#845EC2"
            android:fontFamily="@font/pacifico"
            android:textSize="25sp"/>


    <EditText
            android:id="@+id/nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:textColor="#FEFEDF"
            android:hint="Digite seu nome:"
            android:backgroundTint="#FEFEDF"
    />


    <EditText
            android:id="@+id/nascimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="text"
            android:textColor="#FEFEDF"
            android:focusableInTouchMode="false"
            android:hint="Digite seu próximo aniversário:"
            android:backgroundTint="#FEFEDF"/>

    <EditText
            android:id="@+id/presente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:textColor="#FEFEDF"
            android:hint="Digite seu presente ideal:"
            android:backgroundTint="#FEFEDF"/>


    <Button
            android:id="@+id/botao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Enter"
            android:backgroundTint="#00C9A7"/>


    <TextView
            android:id="@+id/resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#845EC2"
            android:fontFamily="@font/capriola"
            tools:text="Teste"
            android:visibility="invisible"/>




</LinearLayout>